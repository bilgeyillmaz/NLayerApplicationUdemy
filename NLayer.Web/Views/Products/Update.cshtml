
@{
    ViewData["Title"] = "Update";
}
@model ProductDto
<h3>Update Product</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" method="post" asp-controller="Products">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name">Ürün Adı:</label>
                <input class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock">Stok Adedi: </label>
                <input class="form-control" asp-for="Stock"/>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Fiyat Bilgisi: </label>
                <input class="form-control" asp-for="Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Kategori Adı:</label>
                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.categories">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

